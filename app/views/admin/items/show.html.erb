<div class="row d-flex mt-3">
  <h4 class="mb-3">商品詳細</h4>
  <div class="col-12 d-flex justify-content-left">
    <div>
      <%= image_tag @item.get_image(300, 200) %>
    </div>
    <table class="col-6 ml-5">
      <thead></thead>
      <tbody>
        <tr>
          <th class="col-3 pl-0">商品名</th>
          <th><%= @item.item_name %></th>
        </tr>
        <tr>
          <th class="d-flex pl-0 align-items-start">商品説名</th>
          <th><%= @item.item_body %></th>
        </tr>
        <tr>
          <th class="col-3 pl-0">ジャンル</th>
          <th><%= @item.genre.genre_name %></th>
        </tr>
        <tr>
          <th class="col-3 pl-0">
            税込価格<br>
            (税抜価格)
          </th>
          <th>
            <%= number_with_delimiter @item.taxed_price %>
            （<%= number_with_delimiter @item.none_taxed_price %>）円
          </th>
        </tr>
        <tr>
          <th class="col-3 pl-0">販売ステータス</th>
          <th><%= render "sale_status", item: @item %></th>
        </tr>
        <tr>
          <th></th>
          <th><%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-lg btn-success mt-3" %></th>
        </tr>
      </tbody>
    </table>
  </div>
</div>
