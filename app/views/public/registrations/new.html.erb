<div class="container mt-5">
  <h4>新規会員登録</h4>
  <div class="row">
      <div class="col-lg-12 mx-auto ">
        <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>

        <!--<div class="row">-->
        <!--  <div class="col-md-2">名前</div>-->
        <!--  <div class="col-md-1">(姓)</div>-->
        <!--  <div class="col-md-4">-->
        <!--    <%= f.text_field :first_name, class: 'form-control' %>-->
        <!--  </div>-->
        <!--  <div class="col-md-1">(名)</div>-->
        <!--  <div class="col-md-4">-->
        <!--    <%= f.text_field :last_name, class: 'form-control' %>-->
        <!--  </div>-->
        <!--</div>-->

        <table>
        <tbody>
          <tr>
            <th>名前</th>
            <td class="sign-up-small-cell">(姓)</td>
            <td><%= f.text_field :first_name, autofocus: true %></td>
            <td class="sign-up-small-cell">(名)</td>
            <td><%= f.text_field :last_name, autofocus: true %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td class="sign-up-small-cell">(セイ)</td>
            <td><%= f.text_field :last_name_kana, autofocus: true %></td>
            <td class="sign-up-small-cell">(メイ)</td>
            <td><%= f.text_field :first_name_kana, autofocus: true %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td class="sign-up-small-cell"></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email"%></td>
          </tr>
          <tr>
          <th>郵便番号（ハイフンなし）</th>
          <td class="sign-up-small-cell"></td>
          <td><%= f.text_field :postal_code, autofocus: true %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td class="sign-up-small-cell"></td>
            <td colspan="3"><%= f.text_area :address, autofocus: true, class: "sign-up-address" %></td>
          </tr>
          <tr>
            <th>電話番号（ハイフンなし）</th>
            <td class="sign-up-small-cell"></td>
            <td><%= f.text_field :telephone_number, autofocus: true %></td>
          </tr>
          <tr>
            <th>パスワード（６文字以上）</th>
            <td class="sign-up-small-cell"></td>
            <td><%= f.password_field :password %></td>
          </tr>
          <tr>
            <th>パスワード（確認用）</th>
            <td class="sign-up-small-cell"></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "current-password" %></td>
          </tr>
          <tr class="d-block mx-auto">
            <td>
              <%= f.submit "新規登録", class:"btn btn-success mt-3" %>
            </td>
          </tr>
        </tbody>
      </table>
      <% end %>
      <div class="row">
       <div class="col-1"></div>
        <h4 class="d-flex justify-content-left mb-1">既に登録済みの方はこちら</h4>
      </div>
      <div class="row">
        <div class="col-1"></div>
        <%= render "public/shared/links" %>
      </div>
      </div>


  </div>
</div>

