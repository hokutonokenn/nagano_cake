<div class="row mt-3">
  <div class="col-12">
    <h4 class="mb-3">マイページ</h4>
    <div class="row">
      <div class="col-2">
        <h5 class="font-weight-bold">登録情報</h5>
      </div>
      <%= link_to "編集する", customers_information_edit_path, class: "btn btn-md btn-success" %>
    </div>
    <div class="row">
      <table class="table table-bordered col-8 mt-3">
        <tr>
          <th class="table-active col-3">お名前</th>
          <td><%= @customer.first_name + @customer.last_name %></td>
        </tr>
        <tr>
          <th class="table-active">フリガナ</th>
          <td><%= @customer.last_name_kana + @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="table-active">郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th class="table-active">住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="table-active">電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th class="table-active">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
    <div class="row mb-3">
      <div class="col-2">
        <h5 class="font-weight-bold">配送先</h5>
      </div>
      <%= link_to "一覧を見る",  class: "btn btn-md btn-primary" %>
    </div>
    <div class="row">
      <div class="col-2">
        <h5 class="font-weight-bold">注文履歴</h5>
      </div>
      <%= link_to "一覧を見る",  class: "btn btn-md btn-primary" %>
    </div>
  </div>
</div>