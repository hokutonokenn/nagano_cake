<%= form_with model: customer, url: customers_information_path, method: :patch, id: 'new_customer', class: 'new_customer', local: false do |f| %>
  <div class="field row mb-2">
    <%= f.label :first_name, "名前", class: "col-2" %>
    <%= f.label :first_name,"(姓)", class: "col-1" %>
    <%= f.text_field :first_name, autofocus: true, class: "col-3", placeholder: "名字" %>
    <%= f.label :last_name,"(名)", class: "col-1" %>
    <%= f.text_field :last_name, class: "col-3", placeholder: "名前" %>
  </div>
  <div class="field row mb-2">
    <%= f.label :last_name_kana,"フリガナ", class: "col-2" %>
    <%= f.label :last_name_kana,"(セイ)", class: "col-1" %>
    <%= f.text_field :last_name_kana, class: "col-3", placeholder: "ミョウジ" %>
    <%= f.label :first_name_kana,"(メイ)", class: "col-1" %>
    <%= f.text_field :first_name_kana, class: "col-3", placeholder: "ナマエ" %>
  </div>
  <div class="field row mb-2">
    <%= f.label :email,"メールアドレス", class: "col-3" %>
    <%= f.text_field :email, class: "col-3", placeholder: "Magic@gmail.com" %>
  </div>
  <div class="field row mb-2">
    <%= f.label :postal_code,"郵便番号(ハイフンなし)", class: "col-3" %>
    <%= f.text_field :postal_code, class: "col-3", placeholder: "1234567" %>
  </div>
  <div class="field row mb-2">
    <%= f.label :address,"住所", class: "col-3" %>
    <%= f.text_field :address, class: "col-7", placeholder: "ホグワーツ" %>
  </div>
  <div class="field row mb-2">
    <%= f.label :telephone_number,"電話番号(ハイフンなし)", class: "col-3" %>
    <%= f.text_field :telephone_number, class: "col-3", placeholder: "00011112222" %>
  </div>
  <div class="row mb-3">
    <div class="col-3"></div>
    <div class="actions">
      <%= f.submit "更新内容を保存",class: 'btn btn-success btn-md' %>
    </div>
    <%=link_to "退会する", customers_unsubscribe_path, class: "btn btn-md btn-danger ml-5" %>
  </div>
<% end %>